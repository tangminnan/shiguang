<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shiguang.mfrs.dao.GradualDao">

	<select id="get" resultType="com.shiguang.mfrs.domain.GradualDO">
		select `id`,`gradual_name` from p_gradual where id = #{value}
	</select>

	<select id="list" resultType="com.shiguang.mfrs.domain.GradualDO">
		select `id`,`gradual_name` from p_gradual
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="gradualName != null and gradualName != ''"> and gradual_name = #{gradualName} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from p_gradual
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="gradualName != null and gradualName != ''"> and gradual_name = #{gradualName} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.shiguang.mfrs.domain.GradualDO" useGeneratedKeys="true" keyProperty="id">
		insert into p_gradual
		(
			`gradual_name`
		)
		values
		(
			#{gradualName}
		)
	</insert>
	 
	<update id="update" parameterType="com.shiguang.mfrs.domain.GradualDO">
		update p_gradual 
		<set>
			<if test="gradualName != null">`gradual_name` = #{gradualName}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from p_gradual where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from p_gradual where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>