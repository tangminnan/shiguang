<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shiguang.mfrs.dao.FunctionDao">

	<select id="get" resultType="com.shiguang.mfrs.domain.FunctionDO">
		select `id`,`function_name` from p_function where id = #{value}
	</select>

	<select id="list" resultType="com.shiguang.mfrs.domain.FunctionDO">
		select `id`,`function_name` from p_function
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="functionName != null and functionName != ''"> and function_name = #{functionName} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from p_function
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="functionName != null and functionName != ''"> and function_name = #{functionName} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.shiguang.mfrs.domain.FunctionDO" useGeneratedKeys="true" keyProperty="id">
		insert into p_function
		(
			`function_name`
		)
		values
		(
			#{functionName}
		)
	</insert>
	 
	<update id="update" parameterType="com.shiguang.mfrs.domain.FunctionDO">
		update p_function 
		<set>
			<if test="functionName != null">`function_name` = #{functionName}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from p_function where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from p_function where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>