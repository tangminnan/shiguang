<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shiguang.mfrs.dao.StateDao">

	<select id="get" resultType="com.shiguang.mfrs.domain.StateDO">
		select `state_id`,`status` from c_state where state_id = #{value}
	</select>

	<select id="list" resultType="com.shiguang.mfrs.domain.StateDO">
		select `state_id`,`status` from c_state
        <where>  
		  		  <if test="stateId != null and stateId != ''"> and state_id = #{stateId} </if>
		  		  <if test="status != null and status != ''"> and status = #{status} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by state_id
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from c_state
		 <where>  
		  		  <if test="stateId != null and stateId != ''"> and state_id = #{stateId} </if>
		  		  <if test="status != null and status != ''"> and status = #{status} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.shiguang.mfrs.domain.StateDO" useGeneratedKeys="true" keyProperty="stateId">
		insert into c_state
		(
			`status`
		)
		values
		(
			#{status}
		)
	</insert>
	 
	<update id="update" parameterType="com.shiguang.mfrs.domain.StateDO">
		update c_state 
		<set>
			<if test="status != null">`status` = #{status}</if>
		</set>
		where state_id = #{stateId}
	</update>
	
	<delete id="remove">
		delete from c_state where state_id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from c_state where state_id in 
		<foreach item="stateId" collection="array" open="(" separator="," close=")">
			#{stateId}
		</foreach>
	</delete>

</mapper>