<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shiguang.mfrs.dao.MgDao">

	<select id="get" resultType="com.shiguang.mfrs.domain.MgDO">
		select `id`,`goodsid`,`mfrsid` from cc_mg where id = #{value}
	</select>

	<select id="list" resultType="com.shiguang.mfrs.domain.MgDO">
		select `id`,`goodsid`,`mfrsid` from cc_mg
        <where>
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="goodsid != null and goodsid != ''"> and goodsid = #{goodsid} </if>
		  		  <if test="mfrsid != null and mfrsid != ''"> and mfrsid = #{mfrsid} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	<select id="mglist" resultType="com.shiguang.mfrs.domain.MgDO">
		select `id`,`goodsid`,`mfrsid` from cc_mg
		<where>
			<if test="id != null and id != ''"> and id = #{id} </if>
			<if test="goodsid != null and goodsid != ''"> and goodsid = #{goodsid} </if>
			<if test="mfrsid != null and mfrsid != ''"> and mfrsid = #{mfrsid} </if>
		</where>
	</select>
	<!--<select id="mglist" resultType="com.shiguang.mfrs.domain.MgDO">-->
		<!--select * from  cc_mg mg  left join c_goods g on mg.goodsid = g.goodsid left join `c_mfrs` m on m.mfrsid = mg.mfrsid where mg.goodsid=#{value};-->
	<!--</select>-->

 	<select id="count" resultType="int">
		select count(*) from cc_mg
		 <where>
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="goodsid != null and goodsid != ''"> and goodsid = #{goodsid} </if>
		  		  <if test="mfrsid != null and mfrsid != ''"> and mfrsid = #{mfrsid} </if>
		  		</where>
	</select>

	<insert id="save" parameterType="com.shiguang.mfrs.domain.MgDO">
		insert into cc_mg
		(
			`id`, 
			`goodsid`, 
			`mfrsid`
		)
		values
		(
			#{id}, 
			#{goodsid}, 
			#{mfrsid}
		)
	</insert>

	<update id="update" parameterType="com.shiguang.mfrs.domain.MgDO">
		update cc_mg
		<set>
			<if test="goodsid != null">`goodsid` = #{goodsid}, </if>
			<if test="mfrsid != null">`mfrsid` = #{mfrsid}</if>
		</set>
		where id = #{id}
	</update>

	<!--<delete id="remove">-->
		<!--delete from cc_mg where id = #{value}-->
	<!--</delete>-->
	<delete id="remove">
		delete  from cc_mg where mfrsid= #{value};
	</delete>

	<delete id="batchRemove">
		delete from cc_mg where id in
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>