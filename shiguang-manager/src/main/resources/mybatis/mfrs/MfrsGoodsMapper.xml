<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shiguang.mfrs.dao.MfrsGoodsDao">

	<select id="get" resultType="com.shiguang.mfrs.domain.MfrsGoodsDO">
		select `id`,`mfrsnum`,`goodsnum` from c_mfrs_goods where id = #{value}
	</select>

	<select id="list" resultType="com.shiguang.mfrs.domain.MfrsGoodsDO">
		select `id`,`mfrsnum`,`goodsnum` from c_mfrs_goods
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="mfrsnum != null and mfrsnum != ''"> and mfrsnum = #{mfrsnum} </if>
		  		  <if test="goodsnum != null and goodsnum != ''"> and goodsnum = #{goodsnum} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from c_mfrs_goods
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="mfrsnum != null and mfrsnum != ''"> and mfrsnum = #{mfrsnum} </if>
		  		  <if test="goodsnum != null and goodsnum != ''"> and goodsnum = #{goodsnum} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.shiguang.mfrs.domain.MfrsGoodsDO">
		insert into c_mfrs_goods
		(
			`id`, 
			`mfrsnum`, 
			`goodsnum`
		)
		values
		(
			#{id}, 
			#{mfrsnum}, 
			#{goodsnum}
		)
	</insert>
	 
	<update id="update" parameterType="com.shiguang.mfrs.domain.MfrsGoodsDO">
		update c_mfrs_goods 
		<set>
			<if test="mfrsnum != null">`mfrsnum` = #{mfrsnum}, </if>
			<if test="goodsnum != null">`goodsnum` = #{goodsnum}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from c_mfrs_goods where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from c_mfrs_goods where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>