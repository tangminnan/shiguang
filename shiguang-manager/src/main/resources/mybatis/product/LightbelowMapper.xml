<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shiguang.product.dao.LightbelowDao">

	<select id="get" resultType="com.shiguang.product.domain.LightbelowDO">
		select `id`,`light_below` from a_lightbelow where id = #{value}
	</select>

	<select id="list" resultType="com.shiguang.product.domain.LightbelowDO">
		select `id`,`light_below` from a_lightbelow
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="lightBelow != null and lightBelow != ''"> and light_below = #{lightBelow} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from a_lightbelow
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="lightBelow != null and lightBelow != ''"> and light_below = #{lightBelow} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.shiguang.product.domain.LightbelowDO">
		insert into a_lightbelow
		(
			`id`, 
			`light_below`
		)
		values
		(
			#{id}, 
			#{lightBelow}
		)
	</insert>
	 
	<update id="update" parameterType="com.shiguang.product.domain.LightbelowDO">
		update a_lightbelow 
		<set>
			<if test="lightBelow != null">`light_below` = #{lightBelow}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from a_lightbelow where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from a_lightbelow where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>