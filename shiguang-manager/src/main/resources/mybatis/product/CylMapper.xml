<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.shiguang.product.dao.CylDao">

	<select id="get" resultType="com.shiguang.product.domain.CylDO">
		select `id`,`cyl` from a_cyl where id = #{value}
	</select>

	<select id="list" resultType="com.shiguang.product.domain.CylDO">
		select `id`,`cyl` from a_cyl
        <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="cyl != null and cyl != ''"> and cyl = #{cyl} </if>
		  		</where>
        <choose>
            <when test="sort != null and sort.trim() != ''">
                order by ${sort} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
 	<select id="count" resultType="int">
		select count(*) from a_cyl
		 <where>  
		  		  <if test="id != null and id != ''"> and id = #{id} </if>
		  		  <if test="cyl != null and cyl != ''"> and cyl = #{cyl} </if>
		  		</where>
	</select>
	 
	<insert id="save" parameterType="com.shiguang.product.domain.CylDO">
		insert into a_cyl
		(
			`id`, 
			`cyl`
		)
		values
		(
			#{id}, 
			#{cyl}
		)
	</insert>
	 
	<update id="update" parameterType="com.shiguang.product.domain.CylDO">
		update a_cyl 
		<set>
			<if test="cyl != null">`cyl` = #{cyl}</if>
		</set>
		where id = #{id}
	</update>
	
	<delete id="remove">
		delete from a_cyl where id = #{value}
	</delete>
	
	<delete id="batchRemove">
		delete from a_cyl where id in 
		<foreach item="id" collection="array" open="(" separator="," close=")">
			#{id}
		</foreach>
	</delete>

</mapper>